---
import MoonFilledIcon from '@/icons/MoonFilledIcon.astro';
import SunIcon from '@/icons/SunIcon.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Este es mi currÃ­culum' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class=''>
    <div class='dark:bg-dark'>
      <div class='flex justify-end pt-8 pr-8'>
        <button>
          <SunIcon data-theme='light' />
          <MoonFilledIcon class='hidden text-white' data-theme='dark' />
        </button>
      </div>
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html,
  body {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      'Courier New',
      Courier,
      monospace;
    background: #faf9f6;
    letter-spacing: -0.025rem;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    color: #030f11;
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
  }

  p,
  span {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }
</style>

<script>
  if (typeof window !== 'undefined') {
    const button = document.querySelector('button');
    const icons = document.querySelectorAll('[data-theme]');

    button.addEventListener('click', () => {
      icons.forEach((icon) => {
        icon.classList.toggle('hidden');
      });
      document.body.classList.toggle('dark');
    });
  }
</script>
